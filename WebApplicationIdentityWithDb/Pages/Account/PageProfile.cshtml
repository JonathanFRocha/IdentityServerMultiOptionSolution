@page
@model WebApplicationIdentityWithDb.Pages.Account.PageProfileModel
@{
}

<form method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group row mb-4">
        <div class="col-2">
            <label asp-for="UserProfile.Email"></label>
        </div>
        <div class="col-5">
            <input class="form-control" type="text" asp-for="UserProfile.Email" readonly />
        </div>
        <span class="text-danger" asp-validation-for="UserProfile.Email"></span>
    </div>
    <div class="form-group row mb-4">
        <div class="col-2">
            <label asp-for="UserProfile.Department"></label>
        </div>
        <div class="col-5">
            <input class="form-control" type="text" asp-for="UserProfile.Department" />
        </div>
        <span class="text-danger" asp-validation-for="UserProfile.Department"></span>
    </div>
    <div class="form-group row mb-4">
        <div class="col-2">
            <label asp-for="UserProfile.Position"></label>
        </div>
        <div class="col-5">
            <input class="form-control" type="text" asp-for="UserProfile.Position" />
        </div>
        <span class="text-danger" asp-validation-for="UserProfile.Position"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
        <div class="col">
        </div>
    </div>
</form>

@if (!string.IsNullOrWhiteSpace(@Model.SuccessMessage))
{
    <div class="alert alert-success" role="alert">
        @Model.SuccessMessage
    </div>
}
